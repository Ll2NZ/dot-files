{
  "scripts": {
    "dev": "yarn run webpack-dev-server --config-register @babel/register --env.mode development --open --hot",
    "prod": "yarn run webpack --config-register @babel/register --env.mode production",
    "prod:analyze": "yarn prod --env.presets analyze",
    "prod:compress": "yarn prod --env.presets compress",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "format": "prettier --write \"src/**/*.{js,jsx}\"",
    "format:check": "prettier --list-different \"src/**/*.{js,jsx}\"",
    "lint": "eslint \"src/**/*.{js,jsx}\" --quiet --fix"
  },
  "license": "GPL-3.0",
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 ChromeAndroid versions",
