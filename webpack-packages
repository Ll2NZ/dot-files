#!/bin/zsh

# base webpack packages
alias webpack="yarn add webpack webpack-dev-server webpack-cli html-webpack-plugin webpack-merge --dev"
alias analyzer="yarn add webpack-bundle-analyzer --dev"
alias clean-webpack="yarn add clean-webpack-plugin --dev"

# css and scss
alias css="yarn add css-loader style-loader mini-css-extract-plugin --dev"
alias scss="yarn add node-sass sass-loader --dev"
alias autoprefixer="yarn add autoprefixer postcss-loader --dev"
alias optimize-css="yarn add glob mini-css-extract-plugin optimize-css-assets-webpack-plugin purgecss-webpack-plugin --dev"

# loading images
alias images="yarn add file-loader url-loader --dev"

# babel, eslint, prettier
alias babel="yarn add babel-loader @babel/core @babel/preset-env @babel/preset-react @babel/plugin-proposal-class-properties --dev"
alias eslint="yarn add eslint babel-eslint eslint-config-prettier eslint-plugin-import eslint-plugin-jsx-a11y eslint-plugin-react eslint-plugin-react-hooks --dev"
alias prettier="yarn add prettier --dev"

# react & redux
alias react="yarn add react react-dom react-router react-router-dom"
alias redux="yarn add redux redux-thunk react-redux"
alias redux-dev="yarn add redux-devtools-extension --dev"

# jest (testing)
alias testing="yarn add jest react-testing-library --dev"

# js optimization
alias terser="yarn add terser-webpack-plugin --dev"

# install all packages
alias install-all="webpack; analyzer; clean-webpack; css; scss; autoprefixer; optimize-css; images; babel; eslint; prettier; react; redux; redux-dev; testing; terser"
